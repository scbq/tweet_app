<% content_for :title, "Editar Tweet" %>

<h1 class="display-4 text-center mb-4">Editar Tweet</h1>

<!-- Formulario de edición -->
<%= render "form", tweet: @tweet %>

<!-- Separación visual entre el formulario y los enlaces -->
<div class="mt-4 text-center">
  <!-- Enlace para ver el tweet -->
  <%= link_to @tweet, class: 'btn btn-info me-2' do %>
    <i class="fas fa-eye"></i> Ver Tweet
  <% end %>

  <!-- Enlace para volver al listado de tweets -->
  <%= link_to tweets_path, class: 'btn btn-secondary' do %>
    <i class="fas fa-arrow-left"></i> Volver a Tweets
  <% end %>
</div>
